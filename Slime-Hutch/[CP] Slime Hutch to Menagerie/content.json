{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Format": "1.24.0",
  "ConfigSchema": {
    "size": {
      "AllowValues": "large, small",
      "Default": "large"
    },
    "windowstyle": {
      "AllowValues": "default, dark, light",
      "Default": "default"
    },
    "bowls": {
      "AllowValues": "true, false",
      "Default": "false"
    },
    "floorstyle": {
      "AllowValues": "default, alt, rustic, grey",
      "Default": "default"
    }
  },
  "Changes": [
    //load tilesheets
    {
      "LogName": "Load Enhanced Tiles",
      "Action": "Load",
      "Target": "Maps/z_enhancedtiles_unicornedit",
      "FromFile": "assets/z_enhancedtiles_unicornedit.png"
    },
    {
      "LogName": "Load Windows",
      "Action": "Load",
      "Target": "Maps/z_window",
      "FromFile": "assets/z_window.png"
    },
    {
      "LogName": "Load Floors",
      "Action": "Load",
      "Target": "Maps/z_floor",
      "FromFile": "assets/z_floor.png"
    },
    //EditImage
    {
      "LogName": "Edit Windows",
      "Action": "EditImage",
      "Target": "Maps/z_window",
      "FromFile": "assets/windows/{{windowstyle}}.png",
      "PatchMode": "Replace",
    },
    {
      "LogName": "Edit Floors",
      "Action": "EditImage",
      "Target": "Maps/z_floor",
      "FromFile": "assets/floors/{{floorstyle}}.png",
      "PatchMode": "Replace",
    },
    {
      "LogName": "Bowls",
      "Action": "EditImage",
      "Target": "Maps/TownInterior",
      "FromFile": "assets/z_bowls.png",
      "ToArea": {
        "X": 352,
        "Y": 1056,
        "Width": 32,
        "Height": 16
      },
      "FromArea": {
        "X": 0,
        "Y": 0,
        "Width": 32,
        "Height": 16
      },
      "PatchMode": "Replace",
      "When": {
        "bowls |contains=true": "true"
      }
    },
    //load map
    {
      "LogName": "Load Slimehutch",
      "Action": "Load",
      "Target": "Maps/SlimeHutch",
      "FromFile": "assets/{{size}}SlimeHutch.tbin"
    },
  ]
}