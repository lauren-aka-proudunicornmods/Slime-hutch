{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Format": "1.24.0",
  "ConfigSchema": {
    "size": {
      "AllowValues": "large, small",
      "Default": "large"
    },
    "windows": {
      "Default": "dark"
    },
    "bowls": {
      "AllowValues": "true, false",
      "Default": "false"
    },
    "floor": {
      "Default": "vanilla"
    }
  },
  "Changes": [
    {
      "LogName": "Load z_enhancedtiles_unicornedit",
      "Action": "Load",
      "Target": "Maps/z_enhancedtiles_unicornedit",
      "FromFile": "assets/z_enhancedtiles_unicornedit.png"
    }
    {
      "LogName": "Slimehutch",
      "Action": "Load",
      "Target": "Maps/SlimeHutch",
      "FromFile": "assets/SlimeHutch{{size}}.tbin"
    },
    {
      "LogName": "Windows",
      "Action": "Load",
      "Target": "Maps/z_window",
      "FromFile": "assets/z_window_{{windows}}.png",
    },
    {
      "LogName": "Bowls",
      "Action": "EditImage",
      "Target": "Maps/TownInterior",
      "FromFile": "assets/z_bowls.png",
      "ToArea": {
        "X": 352,
        "Y": 1056,
        "Width": 32,
        "Height": 16
      },
      "FromArea": {
        "X": 0,
        "Y": 0,
        "Width": 32,
        "Height": 16
      },
      "PatchMode": "Replace",
      "When": {
        "bowls |contains=true": "true"
      }
    },
    {
      "LogName": "Floor",
      "Action": "Load",
      "Target": "Maps/z_floor",
      "FromFile": "assets/z_floor_{{floor}}.png",
    }
  ]
}