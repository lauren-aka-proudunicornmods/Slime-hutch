{
   "$schema": "https://smapi.io/schemas/content-patcher.json",
   "Format": "1.24.0",
   "ConfigSchema": {
      "RecolorEnabled": {
         "AllowValues": "True, false",
         "Default": "false"
      },
      "RecolorPath": {
         "Default": "D:/GOG Galaxy/Stardew Valley/Mods/[CP] Tilesheets Rearranged/"
      }
   },
   "Changes": [
      //z_seasonsindoors: (season)_outdoorsTileSheet for use inside
      {
         "LogName": "Load z_seasonsindoors",
         "Action": "Load",
         "Target": "Maps/z_seasonsindoors",
         "FromFile": "Maps/{{season}}_outdoorsTileSheet.png"
      },
      {
         "LogName": "Edit z_seasonsindoors",
         "Action": "EditImage",
         "Target": "Maps/z_seasonsindoors",
         "FromFile": "{{RecolorPath}}/assets/{{season}}_outdoorsTileSheet.png",
         "PatchMode": "Replace",
         "When": {
            "RecolorEnabled": true
         }
      },
      //z_seasonsindoors2
            {
               "LogName": "Load z_seasonsindoors2",
               "Action": "Load",
               "Target": "Maps/z_seasonsindoors2",
               "FromFile": "Maps/{{season}}_outdoorsTileSheet2.png"
            },
            {
               "LogName": "Edit z_seasonsindoors2",
               "Action": "EditImage",
               "Target": "Maps/z_seasonsindoors2",
               "FromFile": "{{RecolorPath}}/assets/{{season}}_outdoorsTileSheet2.png",
               "PatchMode": "Replace",
               "When": {
                  "RecolorEnabled": true
               }
            },
      //Z_foreverspring - tilesheet for using elements from the spring outdoors map in any season
      {
         "LogName": "Load z_foreverspring",
         "Action": "Load",
         "Target": "Maps/z_foreverspring",
         "FromFile": "Maps/spring_outdoorsTileSheet.png"
      },
      {
         "LogName": "Edit z_foreverspring",
         "Action": "EditImage",
         "Target": "Maps/z_foreverspring",
         "FromFile": "{{assetpath}}/assets/spring_outdoorsTileSheet.png",
         "PatchMode": "Replace",
         "When": {
            "RecolorEnabled": true
         }
      },
      //Z_foreverspring2 - tilesheet for using elements from the spring outdoors map in any season
      {
         "LogName": "Load z_foreverspring2",
         "Action": "Load",
         "Target": "Maps/z_foreverspring2",
         "FromFile": "Maps/spring_outdoorsTileSheet2.png"
      },
      {
         "LogName": "Edit z_foreverspring2",
         "Action": "EditImage",
         "Target": "Maps/z_foreverspring2",
         "FromFile": "{{assetpath}}/assets/spring_outdoorsTileSheet2.png",
         "PatchMode": "Replace",
         "When": {
            "RecolorEnabled": true
         }
      },
      //z_enhancedtiles_unicornedit - my edit of the farmhouses enhanced tilesheet with a few more water tiles
      {
         "LogName": "Load z_enhancedtiles_unicornedit",
         "Action": "Load",
         "Target": "Maps/z_enhancedtiles_unicornedit",
         "FromFile": "assets/z_enhancedtiles_unicornedit.png"
      }
   ]
}